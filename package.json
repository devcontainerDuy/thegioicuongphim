{
  "name": "thegioicuongphim-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:client\" \"npm:dev:server\"",
    "dev:client": "npm run dev -w client",
    "dev:server": "npm run dev -w server",
    "build": "npm run build:server && npm run build:client",
    "build:client": "npm run build -w client",
    "build:server": "npm run build -w server",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint --workspaces --if-present",
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "rm -rf client/build client/node_modules",
    "clean:server": "rm -rf server/dist server/node_modules",
    "install:all": "npm install && npm install --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "prisma:generate": "npm run postinstall -w server",
    "prisma:migrate": "npx prisma migrate dev --schema=server/prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema=server/prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20"
  }
}