generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int                   @id @default(autoincrement())
  email         String                @unique
  password      String
  name          String?
  avatar        String?
  isRoot        Boolean               @default(false)
  rememberToken String?               @db.VarChar(255)
  roleId        Int?
  role          Role?                 @relation(fields: [roleId], references: [id])
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  watchHistory  WatchHistory[]
  favorites     Favorite[]
  ratings       Rating[]
  comments      Comment[]
  tokens        PersonalAccessToken[]
  sessions      Session[]
  watchlist     Watchlist[]
  notifications Notification[]
}

model Role {
  id          Int          @id @default(autoincrement())
  name        String       @unique // "Admin", "User", "VIP"
  description String?
  users       User[]
  permissions Permission[]
}

model Permission {
  id          Int     @id @default(autoincrement())
  slug        String  @unique // "movie.create", "user.delete"
  description String?
  roles       Role[]
}

model Movie {
  id             Int            @id @default(autoincrement())
  slug           String         @unique
  name           String
  originalName   String?
  description    String?        @db.Text
  thumbUrl       String?
  posterUrl      String?
  quality        String? // "HD", "FHD", "CAM"
  language       String? // "Vietsub", "Lồng Tiếng"
  year           Int?
  type           String         @default("series") // "movie" | "series"
  genres         Json? // ["Hành động", "Tình cảm"]
  countries      Json? // ["Việt Nam", "Trung Quốc"]
  category       Json? // Store complex category data if needed
  totalEpisodes  Int            @default(1)
  currentEpisode String? // "Tập 10", "FULL"
  time           String? // "45 phút/tập"
  director       String?
  casts          Json? // ["Actor A", "Actor B"]
  views          Int            @default(0)
  status         String         @default("active") // "active" | "inactive"
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  episodes       Episode[]
  watchHistory   WatchHistory[]
  favorites      Favorite[]
  ratings        Rating[]
  comments       Comment[]
  watchlists     Watchlist[]
  viewLogs       ViewLog[]
}

model Episode {
  id           Int            @id @default(autoincrement())
  movieId      Int
  movie        Movie          @relation(fields: [movieId], references: [id], onDelete: Cascade)
  name         String // "Tập 1", "FULL"
  slug         String
  embedUrl     String?        @db.Text
  m3u8Url      String?        @db.Text
  sortOrder    Int            @default(0)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  watchHistory WatchHistory[]

  @@unique([movieId, slug])
}

model WatchHistory {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  movieId   Int
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  episodeId Int?
  episode   Episode? @relation(fields: [episodeId], references: [id], onDelete: SetNull)
  progress  Int      @default(0) // 0-100 percentage
  watchedAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, movieId, episodeId])
  @@index([userId])
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  movieId   Int
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, movieId])
  @@index([userId])
}

model Setting {
  key         String   @id
  value       String   @db.Text
  description String?
  type        String   @default("string") // "string", "boolean", "number"
  updatedAt   DateTime @updatedAt
}

model Rating {
  id        Int          @id @default(autoincrement())
  userId    Int
  movieId   Int
  score     Int          @default(0) // 1-5
  content   String?      @db.Text
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  user      User         @relation(fields: [userId], references: [id])
  movie     Movie        @relation(fields: [movieId], references: [id])
  votes     ReviewVote[]
}

model ReviewVote {
  id        Int      @id @default(autoincrement())
  ratingId  Int
  userId    Int
  rating    Rating   @relation(fields: [ratingId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([ratingId, userId])
}

model Comment {
  id        Int       @id @default(autoincrement())
  userId    Int
  movieId   Int
  parentId  Int?
  content   String    @db.Text
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id])
  movie     Movie     @relation(fields: [movieId], references: [id])
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")
}

model PersonalAccessToken {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenHash String    @db.VarChar(255)
  expiresAt DateTime
  revoked   Boolean   @default(false)
  createdAt DateTime  @default(now())
  sessions  Session[]

  @@index([userId])
  @@index([tokenHash])
}

model Session {
  id             Int                 @id @default(autoincrement())
  userId         Int
  user           User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokenId        Int
  token          PersonalAccessToken @relation(fields: [tokenId], references: [id], onDelete: Cascade)
  ipAddress      String?             @db.VarChar(45)
  userAgent      String?             @db.Text
  lastActivityAt DateTime            @default(now())
  createdAt      DateTime            @default(now())

  @@index([userId])
}

model Watchlist {
  id        Int      @id @default(autoincrement())
  userId    Int
  movieId   Int
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie     Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@index([userId])
}

model ViewLog {
  id      Int      @id @default(autoincrement())
  movieId Int
  date    DateTime @default(now()) @db.Date // Store only date (YYYY-MM-DD)
  views   Int      @default(1)
  movie   Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([movieId, date])
  @@index([date])
}

model Notification {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   @default("SYSTEM") // "REPLY", "MOVIE_UPDATE", "SYSTEM"
  title     String
  message   String   @db.Text
  isRead    Boolean  @default(false)
  metadata  Json? // { commentId, movieSlug, etc. }
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([isRead])
}
